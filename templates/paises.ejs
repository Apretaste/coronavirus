<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'CORONAVIRUS'})">Resumen</a></li>
			<li class="tab"><a href="#" class="active">Países</a></li>
		</ul>
	</div>
</div>

<div class="input-field outline search-field">
	<input id="search" type="text" class="search-input" onkeyup="filter(this.value)"/>
	<label for="search">Escriba país para filtrar</label>
</div>

<div class="row">
	<div class="col s12">
		<p>Ordenado por muertes por millón de habitantes.</p>
		<% countries.forEach(function(item, i){ %>
			<div class="card" data-value="<%= item.name %>">
				<div class="card-person grey lighten-5">
					<% if(item.code) { %>
						<img style="height:10px;" src="{{APP_RESOURCES}}/images/flags/<%= item.code %>.png"/>
					<% } %>
					<%= item.name %>
					<span class="chip tiny clear right"><%= i+1 %></span>
				</div>
				<div class="card-content">
					<span class="chip tiny lime lighten-3"><i class="material-icons icon">local_hospital</i> <%= format(item.cases) %></span>
					<span class="chip tiny green lighten-3"><i class="material-icons icon">assignment_turned_in</i> <%= format(item.recovered) %></span>
					<span class="chip tiny red lighten-3"><i class="material-icons icon">airline_seat_flat</i> <%= format(item.deaths) %></span>
					<p class="blue-grey-text"><%= format(item.population) %> habitantes, <%= format(item.deathsPerOneMillion) %> muertes por millón y <%= format(item.totalTests) %> pruebas realizadas.</p>
				</div>
			</div>
		<% }) %>
	</div>
</div>
